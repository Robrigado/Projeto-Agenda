<%- include('includes/head.ejs') %>
<%- include('includes/navBar.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">
        <span <% if(!contato) { %> style = "text-decoration: underline;font-weight: bold;" <% } %>>cadastre</span> ou 
        <span <% if(contato) { %> style = "text-decoration: underline;font-weight: bold;" <% } %>> edite </span> seu contato 
      </p>
       
      <%- include('./includes/messages.ejs') %>

      <div class="row">

        <div class="col-sm">
          
          <% if (contato) { %>
            <form action="/contato/edit/<%= contato._id %> " method="post" class="contato-form">
          <% } else { %>
            <form action="/contato/register" method="post" class="contato-form">
            <% } %> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3 ">
              <label class="form-label">Nome</label>
              <input value="<%=contato.nome%> " type="text" class="form-control" aria-describedby="name-input" name="nome">
            </div>

            <div class="mb-3">
              <label class="form-label">Sobrenome</label>
              <input value="<%= contato.sobrenome %>" type="text" class="form-control" aria-describedby="lastName-input" name="sobrenome">
            </div>

            <div class="mb-3">
              <label class="form-label">Telefone</label>
              <input value="<%= contato.telefone %> "  type="text" class="form-control" aria-describedby="PhoneNumber-input" name="telefone">
            </div>

            <div class="mb-3">
              <label class="form-label">E-mail</label>
              <input value="<%= contato.email %> "  type="email" class="form-control" aria-describedby="email-input" name="email">
            </div>


            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer.ejs') %>