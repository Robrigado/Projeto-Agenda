<%- include('includes/head.ejs') %>
<%- include('includes/navBar.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta</p>

      <%- include('./includes/messages.ejs') %>

      <div class="row">

        <div class="col-lg login-form">
          <h4>Faça seu cadastro</h4>
          <p>Já possui conta? <span class="login-button">Faça login</span></p>

          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label class="form-label">Endereço de email</label>
              <input type="email" class="form-control" aria-describedby="email-input" name="email">
            </div>

            <div class="mb-3">
              <label class="form-label">Senha</label>
              <input type="password" class="form-control" aria-describedby="password-input" name="password">
            </div>


            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>
        </div>


        <div class="col-lg register-form">
          <h4>Logar na sua conta</h4>
          <p>Ainda não possui uma conta? <span class="register-button">Faça seu cadastro</span></p>


          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label class="form-label">Endereço de email</label>
              <input type="email" class="form-control" aria-describedby="email-input" name="email">
            </div>

            <div class="mb-3">
              <label class="form-label">Senha</label>
              <input type="password" class="form-control" aria-describedby="password-input" name="password">
            </div>


            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>


      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer.ejs') %>